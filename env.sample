# Discord / OpenAI
DISCORD_BOT_TOKEN="YOUR_DISCORD_BOT_TOKEN"
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# LLM model (nani_bot / pipeline)
OPENAI_MODEL="gpt-4o"

# el-agent (v2 core) optional configs
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="password"
REDIS_URL="redis://localhost:6379"
EL_EVAL_WEIGHTS="/absolute/path/to/config/weights/weights.json"
EL_PROMPT_VARIANTS_DIR="/absolute/path/to/prompts"

# Curious interview agent flags
EL_AGENT_REQUIRED=1        # 1: el-agent必須 / 0: フォールバック許可
SHOW_CONFIDENCE=0          # 1で確からしさを表示
GOAL_CLASSIFIER=1
QUESTION_REFINER=1
INTERVIEW_MODE=1

# Session store (SQLite)
EL_SQLITE_PATH="./data/el_sessions.db"

# Logging / tracing
EL_TRACE=1                 # 1でトレースを有効化
EL_TRACE_DIR="./logs/wal"

# Metrics (Prometheus)
METRICS_PORT=8000


