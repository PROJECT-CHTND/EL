# Eager Learner (EL) Configuration
# Copy this file to .env and fill in the values

# ===================
# Required Settings
# ===================

# OpenAI API Key
OPENAI_API_KEY="sk-..."

# ===================
# Optional Settings
# ===================

# OpenAI Model Configuration
# Flagship model for main conversation responses (default: gpt-5.2)
OPENAI_MODEL="gpt-5.2"
# Mid-tier model for structured analysis tasks (default: gpt-5-mini)
OPENAI_MODEL_MID="gpt-5-mini"
# Fast model for classification and tagging tasks (default: gpt-5-nano)
OPENAI_MODEL_FAST="gpt-5-nano"

# API Server Port (default: 8000)
PORT=8000

# Neo4j Connection (optional - runs without KG if not set)
# NEO4J_URI="bolt://localhost:7687"
# NEO4J_USER="neo4j"
# NEO4J_PASSWORD="your_password_here"

# Logging Level (default: INFO)
LOG_LEVEL="INFO"

# Environment (development enables hot reload)
ENV="production"
